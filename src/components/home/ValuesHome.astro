---
import type { RootObject } from "../../interfaces/dbData";
import ButtonContent from "../buttons/Buttons";
import HighlightedText from "../global/TitleColor";
interface Props {
  data: RootObject;
}

const { data } = Astro.props;
---

<section
  class="flex items-center justify-center relative bg-[#303030] flex-col-reverse md:flex-row md:mt-16"
>
  <div
    class="w-full md:w-3/5 h-auto p-5 flex flex-col md:flex-row justify-center items-center py-16"
  >
    <div class="w-full md:w-1/2 px-0 md:px-10 text-center md:text-start">
      <h2 class="text-4xl md:text-7xl text-border font-extrabold pb-10">
        Our Values
      </h2>
      <p class="text-white pb-5 pr-5">{data.valuesContent.mission}</p>
      <div class="flex justify-center md:justify-start">
        <ButtonContent />
      </div>
    </div>
    <div class="w-full md:w-2/5 text-center md:text-start mt-5 md:mt-0">
      <div
        class="flex flex-col-reverse md:flex-row items-center justify-start space-x-0 md:space-x-3 space-y-2 md:space-y-0 pb-5"
      >
        <span
          class="p-4 bg-opacity-30 flex justify-center items-center rounded-r-2xl rounded-bl-2xl w-[60px] h-[60px] bg-primary"
        >
          <i class={`fa-solid fa-house text-[28px] text-white`}></i>
        </span>
        <p class="text-xl font-semibold text-white">Vision</p>
      </div>
      <p class="text-white pb-5 pr-5">{data.valuesContent.vision}</p>
      <div
        class="flex flex-col-reverse md:flex-row items-center justify-start space-x-0 md:space-x-3 space-y-2 md:space-y-0 pb-5"
      >
        <span
          class="p-4 bg-opacity-30 flex justify-center items-center rounded-r-2xl rounded-bl-2xl w-[60px] h-[60px] bg-primary"
        >
          <i class={`fa-solid fa-house text-[28px] text-white`}></i>
        </span>
        <p class="text-xl font-semibold text-white">Why Choose Us?</p>
      </div>
      <p class="text-white pb-5 pr-5">{data.valuesContent.whychooseUs}</p>
    </div>
  </div>
  <div class="w-full md:w-2/5 h-auto">
    <img
      src={data.gallery[10]}
      alt="img-values"
      class="w-full h-[550px] md:h-[950px] object-cover mb-0 md:-mb-20"
    />
  </div>
</section>
