---
import type { RootObject } from "../../interfaces/dbData";

interface Props {
  image: string;
  title?: string;
}

const { image, title } = Astro.props;

const response = await fetch(import.meta.env.API_URL);
const data: RootObject = await response.json();
---

<div class="relative ">


  <div class="relative md:h-[450px] h-[350px] bg-gradient-to-r from-[#1e1e1e] to-black">
  </div>
  <div
    class="absolute inset-0 z-20 md:h-[450px] h-[350px] md:p-2 p-4 md:w-[100%] w-full flex items-end justify-end flex-wrap mx-auto"
  >
    <div
      class="flex flex-col items-end justify-center pl-4 gap-4 md:w-[50%] w-full pb-10 px-10"
    >
      <h1 class="md:text-[46px] text-[30px] font-bold text-white capitalize border-b-2 border-white">
        {title}
      </h1>
      <div class="flex justify-center flex-row gap-4 items-center">
        <a
          href="/"
          class="flex items-center gap-2 text-white text-[16px] font-medium hover:text-secondary transition-all duration-300 ease-in-out"
        >
          <i class="fa-solid fa-home"></i>
          <span class="text-white text-[16px] font-medium">Home</span>
        </a>
        <i class="fa-solid fa-arrow-right text-white"></i>
        <span class="text-white text-[16px] font-medium">{title}</span>
      </div>
    </div>

  </div>
</div>
